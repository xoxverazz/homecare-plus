# Backend Environment Configuration
# IMPORTANT: Replace these values with your actual credentials

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=786110
DB_NAME=homecare_plus
DB_PORT=3306

# JWT Secret for Authentication
JWT_SECRET=your_very_secure_random_secret_key_here_change_this_in_production

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# Google OAuth Configuration (Optional - for Sign in with Google)
# Get these from Google Cloud Console: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# AI API Configuration (Use free alternatives)
# Option 1: Hugging Face API (Free tier available)
# Get API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Option 2: Use local AI model (recommended for free deployment)
USE_LOCAL_AI=true

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173

# Map API Configuration (Optional - for hospital maps)
# Option 1: OpenStreetMap (Free, no API key needed)
# Option 2: Google Maps API (requires API key)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_optional

# Email Configuration (Optional - for notifications)
# Use free SMTP services like Mailtrap for development
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@homecareplus.com
